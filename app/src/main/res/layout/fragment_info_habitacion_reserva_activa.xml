<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".InfoHabitacionReservaActiva"
    android:background="@color/blanco_fondo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

   <ScrollView
       android:id="@+id/scroll_contendor_reserva_activa"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <com.google.android.material.imageview.ShapeableImageView
               android:id="@+id/imgv_info_habitacion_reserva_activa"
               android:layout_width="390dp"
               android:layout_height="260dp"
               android:layout_margin="10dp"
               android:src="@drawable/hotel_uno"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:shapeAppearanceOverlay="@style/roundimageview" />


           <TextView
               android:id="@+id/txt_total_apagar_habit_reserva_activa"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/total_to_pay"
               android:textColor="@color/amarillo"
               android:textSize="14sp"
               android:textStyle="bold"
               android:fontFamily="@font/montserrat"
               android:layout_marginStart="10dp"
               android:layout_marginTop="20dp"
               android:layout_marginBottom="20dp"
               app:layout_constraintTop_toBottomOf="@+id/imgv_info_habitacion_reserva_activa"
               app:layout_constraintStart_toStartOf="parent"
               />

           <TextView
               android:id="@+id/txt_precio_habit_reserva_activa"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/price_bedrooms"
               android:textColor="@color/amarillo"
               android:textSize="14sp"
               android:textStyle="bold"
               android:fontFamily="@font/montserrat"
               android:layout_marginStart="10dp"
               android:layout_marginTop="20dp"
               android:layout_marginBottom="20dp"
               app:layout_constraintTop_toBottomOf="@id/imgv_info_habitacion_reserva_activa"
               app:layout_constraintStart_toEndOf="@+id/txt_total_apagar_habit_reserva_activa"
               app:layout_constraintEnd_toStartOf="@+id/cardview_contenedor_calif_habit_reserva_activa"
               app:layout_constraintHorizontal_bias="0.00"
               />

           <androidx.cardview.widget.CardView
               android:id="@+id/cardview_contenedor_calif_habit_reserva_activa"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/imgv_info_habitacion_reserva_activa"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintHorizontal_bias="0.96"
               app:contentPadding="10dp"
               android:layout_marginTop="10dp"
               android:backgroundTint="@color/gris_contenedor"
               app:cardCornerRadius="10dp">

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <com.google.android.material.imageview.ShapeableImageView
                       android:id="@+id/imgv_estrella_habit_reserva_activa"
                       android:layout_width="17.54dp"
                       android:layout_height="17.8dp"

                       android:src="@drawable/estrella_llena"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintEnd_toStartOf="@+id/txt_numero_estrellas_habit_reserva_activa"
                       app:layout_constraintHorizontal_bias="0.977"
                       app:layout_constraintStart_toStartOf="parent" />

                   <TextView
                       android:id="@+id/txt_numero_estrellas_habit_reserva_activa"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="5dp"
                       android:fontFamily="@font/plus_jakarta_sans_regular"
                       android:text="@string/number_star"
                       android:textColor="@color/black"
                       android:textSize="12sp"
                       android:textStyle="bold"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toEndOf="@+id/imgv_estrella_habit_reserva_activa"
                       app:layout_constraintTop_toTopOf="parent" />

               </androidx.constraintlayout.widget.ConstraintLayout>

           </androidx.cardview.widget.CardView>

           <TextView
               android:id="@+id/txt_nombre_habit_info_reserva_activa"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="60dp"
               android:fontFamily="@font/roboto"
               android:textStyle="bold"
               android:textSize="22sp"
               android:textColor="@color/verde_link"
               android:text="@string/bedroom"
               app:layout_constraintTop_toBottomOf="@id/imgv_info_habitacion_reserva_activa"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.05"/>

           <TextView
               android:id="@+id/txt_titulo_calificacion"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/qualification"
               android:layout_marginTop="10dp"
               android:fontFamily="@font/plus_jakarta_sans_regular"
               android:textSize="14sp"
               android:textStyle="bold"
               android:textColor="@color/black"
               app:layout_constraintTop_toBottomOf="@id/txt_nombre_habit_info_reserva_activa"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.05"/>

           <TextView
               android:id="@+id/txt_descripcion_calificacion"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:fontFamily="@font/plus_jakarta_sans_regular"
               android:text="@string/qualification_description"
               android:textColor="@color/gris_parrafo"
               android:textSize="12sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.092"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/txt_titulo_calificacion" />

           <Button
               android:layout_width="140dp"
               android:layout_height="wrap_content"
               android:layout_marginTop="60dp"
               android:backgroundTint="@color/blanco_fondo"
               android:text="@string/qualification_here"
               android:textColor="@color/gris_parrafo"
               android:fontFamily="@font/plus_jakarta_sans_regular"
               android:textSize="12sp"
               app:cornerRadius="10dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.567"
               app:layout_constraintStart_toEndOf="@id/txt_descripcion_calificacion"
               app:layout_constraintTop_toBottomOf="@id/cardview_contenedor_calif_habit_reserva_activa"
               app:strokeColor="@color/blanco_encabezado"
               app:strokeWidth="1dp" />

           <TextView
               android:id="@+id/txt_titulo_descripcion_habit_info_reserva_activa"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/description_hotel"
               android:layout_marginTop="10dp"
               android:fontFamily="@font/plus_jakarta_sans_regular"
               android:textSize="14sp"
               android:textStyle="bold"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/txt_descripcion_calificacion"
               app:layout_constraintHorizontal_bias="0.05"/>


           <TextView
               android:id="@+id/txt_descripcion_habit_reserva_activa"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:paddingStart="5dp"
               android:paddingEnd="5dp"
               android:textSize="12sp"
               android:textColor="@color/gris_parrafo"
               android:paddingBottom="10dp"
               android:fontFamily="@font/plus_jakarta_sans_regular"
               android:text="@string/description_content"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.05"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/txt_titulo_descripcion_habit_info_reserva_activa" />


           <androidx.cardview.widget.CardView
               android:id="@+id/cardview_servicios_reserva_activa"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/txt_descripcion_habit_reserva_activa"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:backgroundTint="@color/color_piel"
               app:cardCornerRadius="0dp"
               app:cardElevation="0dp"
               app:contentPadding="15dp">

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <TextView
                       android:id="@+id/txt_servicios_adicionales_reserva_activa"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/service"
                       android:fontFamily="@font/plus_jakarta_sans_regular"
                       android:textSize="16sp"
                       android:textStyle="bold"
                       android:textColor="@color/black"
                       app:layout_constraintHorizontal_bias="0.0"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintTop_toTopOf="parent"/>


                   <androidx.recyclerview.widget.RecyclerView
                       android:id="@+id/recycler_view_servicios_adicionales_contratados"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_marginTop="10dp"
                       app:layout_constraintTop_toBottomOf="@id/txt_servicios_adicionales_reserva_activa"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"/>

               </androidx.constraintlayout.widget.ConstraintLayout>

           </androidx.cardview.widget.CardView>



       </androidx.constraintlayout.widget.ConstraintLayout>

   </ScrollView>

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            android:text="@string/save"
            app:icon="@drawable/icon_mas"
            app:iconGravity="textEnd"
            app:iconPadding="6dp"
            app:iconSize="24dp"
            android:backgroundTint="@color/amarillo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scroll_contendor_reserva_activa"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>