<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/menu_superior"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/amarillo"
        app:theme="@style/menuSuperior"
        app:menu="@menu/menu_navegacion_inferior"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="25dp"
                android:paddingTop="10dp"
                android:src="@drawable/logo_menu_superior"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="15dp"
                android:textAlignment="center"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto"
                android:text="@string/hotel_title"
                android:textColor="@color/verde_menu_superior"
                android:textSize="6sp"
                android:textStyle="bold|normal"/>
        </FrameLayout>

    </androidx.appcompat.widget.Toolbar>
</com.google.android.material.appbar.AppBarLayout>