<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarInformacionPersonal"
    android:background="@color/blanco_fondo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_nombre_completo_editar_infop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="164dp"
                android:fontFamily="@font/roboto"
                android:text="@string/fullName"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.069"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <EditText
                android:id="@+id/edtxt_nombre_completo_editar_infop"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:width="370dp"
                android:background="@drawable/entrada_personalizada"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="@string/fullName"
                android:inputType="text"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColorHint="@color/gris_hint"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_nombre_completo_editar_infop"/>


            <TextView
                android:id="@+id/txt_dui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto"
                android:text="@string/dui"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.067"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtxt_nombre_completo_editar_infop"/>


            <EditText
                android:id="@+id/edtxt_dui"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:width="370dp"
                android:background="@drawable/entrada_personalizada"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="@string/number_digits_dui"
                android:inputType="number"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColorHint="@color/gris_hint"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.609"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_dui"/>

            <TextView
                android:id="@+id/txt_nombre_usuario_editar_infop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto"
                android:text="@string/nameUser"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.068"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtxt_dui" />


            <EditText
                android:id="@+id/edtxt_nombre_usuario_editar_infop"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:width="370dp"
                android:background="@drawable/entrada_personalizada"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="@string/nameUser"
                android:inputType="text"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColorHint="@color/gris_hint"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_nombre_usuario_editar_infop" />


            <TextView
                android:id="@+id/txt_correo_editar_infop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="@string/mail"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.068"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtxt_nombre_usuario_editar_infop" />


            <EditText
                android:id="@+id/edtxt_correo_editar_infop"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:width="370dp"
                android:background="@drawable/entrada_personalizada"
                android:ems="10"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/roboto"
                android:hint="@string/example_mail"
                android:inputType="textEmailAddress"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColorHint="@color/gris_hint"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.609"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_correo_editar_infop" />

            <TextView
                android:id="@+id/txt_fecha_nacimiento_editar_infop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="20dp"
                android:text="@string/dateBirth"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.068"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtxt_correo_editar_infop" />


            <EditText
                android:id="@+id/edtxt_fecha_nacimiento_editar_infop"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:width="370dp"
                android:background="@drawable/entrada_personalizada"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="@string/formatDateBirth"
                android:inputType="text"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginTop="12dp"
                android:textColorHint="@color/gris_hint"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.39"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_fecha_nacimiento_editar_infop" />


            <androidx.cardview.widget.CardView
                android:id="@+id/contener_subir_imagen"
                android:layout_width="360dp"
                android:layout_height="184dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintTop_toBottomOf="@+id/edtxt_fecha_nacimiento_editar_infop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.39"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/prueba"
                    >


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/icon_mas"
                        android:layout_marginTop="20dp"
                        app:layout_constraintBottom_toTopOf="@+id/textView4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:text="@string/change_photo"
                        android:fontFamily="@font/roboto"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/button5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.504"
                        app:layout_constraintStart_toStartOf="parent" />

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="@string/upload"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:fontFamily="@font/roboto"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:backgroundTint="@color/amarillo"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_save_nueva_contra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="370dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/amarillo"
                android:fontFamily="@font/roboto"
                android:text="@string/save"
                android:textSize="14sp"
                android:textStyle="bold"
                app:icon="@drawable/icono_guardar"
                app:iconGravity="textEnd"
                app:iconSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.39"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contener_subir_imagen"
                android:layout_marginBottom="20dp"
                />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:elevation="10dp"
            android:scaleType="fitCenter"
            app:shapeAppearanceOverlay="@style/ImagenCircular"
            app:strokeWidth="3dp"
            android:padding="3dp"
            app:strokeColor="@color/black"
            android:src="@drawable/imagen_perfil"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05" />









    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</FrameLayout>