<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Redondear las esquinas inferiores de la imagen de la activity main-->
    <style name="radius">
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    <!--Otra forma de redondear revisarla en caso de fallar la primera-->
    <style name="roundimageview" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">35dp</item>
        <item name="color">@color/white</item>
    </style>

    <style name="ImagenCircular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ImagenCircular2">
        <item name="cornerSize">30%</item>
    </style>

    <!-- res/values/styles.xml -->
    <style name="estilo_ranting_bar" parent="Widget.AppCompat.RatingBar">
        <item name="android:minHeight">20dip</item> <!-- Ajusta el tamaño de la estrella -->
        <item name="android:maxHeight">20dip</item> <!-- Ajusta el tamaño de la estrella -->
        <item name="android:progressDrawable">@drawable/personalizacion_estrellas</item>
    </style>

</resources>