<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- Fondo del CardView -->
        <shape android:shape="rectangle">
            <solid android:color="@color/contenedor_azul" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <!-- Borde punteado -->
        <shape android:shape="rectangle">
            <stroke
                android:width="0.9dp"
                android:color="@android:color/black"
                android:dashWidth="4dp"
                android:dashGap="4dp" />
            <corners android:radius="8dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
</layer-list>